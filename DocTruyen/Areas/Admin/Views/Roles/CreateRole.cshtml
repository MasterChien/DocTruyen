@using DocTruyen.Service.VMs.Role
@model CreateRoleVM

@{
    ViewData["Title"] = "Tạo role";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-md-4 cmt align-middle">
        <h4 class="text-center">Thêm Role</h4>
        <form method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row d-flex justify-content-center mt-3" style="width:99%;margin-left:2px">
                <input type="submit" value="Thêm role" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

