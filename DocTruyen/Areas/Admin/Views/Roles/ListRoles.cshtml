@{
    ViewData["Title"] = "Danh sách role";
}
@using DocTruyen.Service.VMs.Role
@model IEnumerable<RoleVM>

<div class="container bg-light rounded-3">
    <div class="row pb-3">
        <h3 class="text-center">Danh Sách Role</h3>
        <div class="col-md-4">
            <div class="d-inline-flex">
                <button class="btn btn-outline-primary" type="submit">Phân quyền</button>
            </div>
        </div>
        <div class="col-md-5">
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a class="btn btn-outline-primary" asp-action="CreateRole">Thêm quyền mới</a>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="row">
            <table class="table table-hover">
                <thead class="">
                    <tr class="table-active ">
                        <th class="col-md-4">Tên phân quyền</th>
                        <th class="col-md-5">Mô tả</th>
                        <th class="col-md-3">Thao Tác</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr class="">
                            <td class="col-md-4">@role.Name</td>
                            <td class="col-md-5">@role.Description</td>
                            <td class="col-md-3">
                                <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@role.Id" style="margin-right:5px">
                                    <i class="bi bi-pencil-square"></i>
                                    Sửa
                                </a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id">
                                    <i class="bi bi-trash"></i>
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }
    else
    {
        <h3 class="text-center mt-5 pt-5">Chưa có role nào được tạo</h3>
    }
</div>

