            </div>
            <div class="form-group row">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @*     <div class="form-group row">
            <label asp-for="ProfileImgUrl" class="control-label"></label>
            <input asp-for="ProfileImgUrl" class="form-control" />
            <span asp-validation-for="ProfileImgUrl" class="text-danger"></span>
            </div>*@
            <div class="form-group row">
                <label asp-for="ProfileImgUrl" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImgUrl" class="form-control custom-file-input" />
                    <label class="custom-file-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('.custom-file-input').on("change", function() {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('custom-file-lable').html(fileName);
            });
        });
    </script>
}
