@using DocTruyen.Service.VMs.Comment
@model CreateCommentVM

@* Add Comment *@
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details" asp-controller="Posts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span aria-hidden="true" asp-for="@Model.NovelId"></span>
            <span aria-hidden="true" asp-for="@Model.CreatedDate = @DateTime.Now"></span>
            <div class="form-group">
                <label asp-for="@Model.Text" class="control-label"></label>
                <input asp-for="@Model.Text" class="form-control" />
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>