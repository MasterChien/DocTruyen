@using DocTruyen.Service.VMs.Comment
@model IEnumerable<CommentViewVM>


<div class="cmt">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    @foreach (var cmt in Model)
                    {
                        <div class="media mt-3">
                            <div class="media-body">
                                <div class="row">
                                    <div class="col-8 d-flex">
                                        <img class="mr-3 rounded-circle" alt="@cmt.User.Email" src="@cmt.User.ProfileImgURL" />
                                        <h6 style="margin-left:5px">@cmt.User.Email</h6>
                                        <span>- @cmt.CreatedDate</span>
                                    </div>

                                    <div class="col-4">

                                        <div class="pull-right reply">

                                            <a href="#"><span><i class="fa fa-reply"></i> reply</span></a>

                                        </div>

                                    </div>
                                </div>
                                <div class="mt-2">@cmt.Text</div>
                                @if (cmt.Replies != null)
                                {
                                    foreach (var reply in cmt.Replies)
                                    {
                                        <div class="media mt-4 px-md-4">
                                            <a class="pr-3" href="#"></a>
                                            <div class="media-body">

                                                <div class="row">
                                                    <div class="col-12 d-flex">
                                                        <img class="rounded-circle" alt="@reply.User.Email" src="@reply.User.ProfileImgURL" />
                                                        <h6 style="margin-left:5px">@reply.User.Email</h6>
                                                        <span>- @reply.CreatedDate</span>
                                                    </div>

                                                </div>
                                                 <div class="mt-2">@reply.Text</div>
                                                
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
